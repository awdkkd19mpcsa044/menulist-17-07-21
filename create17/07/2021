import java.util.*;
public class menulist
{
public static void main(String[]args)
{
Scanner sc = new Scanner(System.in);
LinkedList<Integer>v=new LinkedList<Integer>();
int n,ch;
do
{
System.out.println("1.BeginInsert\n2.EndInsSert\n3.PositionInsert\n4.BeginDelete\n5.EndDelete\n6.PositionDelete\n7.Display\n8.Exit");
ch=sc.nextInt();
switch(ch)
{
case 1:System.out.println("Enter n value");
n=sc.nextInt();
v.addFirst(n);
break;
case 2:System.out.println("Enter n value");
n=sc.nextInt();
v.addLast(n);
break;
case 3:System.out.println("Enter n value");
n=sc.nextInt();
v.add(n);
break;
case 4:System.out.println("Enter n value");
v.removeFirst();
break;
case 5:System.out.println("Enter n value");
v.removeLast();
break;
case 6:System.out.println("Enter n value");
n=sc.nextInt();
v.remove(4);
break;
case 7:System.out.println(v);
default:System.out.println("invalid choice");
}
System.out.println("1.BeginInsert\n2.EndInsSert\n3.PositionInsert\n4.BeginDelete\n5.EndDelete\n6.PositionDelete\n7.Display\n8.Exit");
ch=sc.nextInt();
}
while(ch<4);
}
}
